<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.CategoriesActivity">

    <include
        android:id="@+id/include"
        layout="@layout/appbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Мои категории"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25dp" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="#00B0FF"
                android:clickable="false"
                android:text="Категория нейм"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:clickable="false"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Two" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:clickable="false"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Three" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:clickable="false"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Four" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Платные категории"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="25dp" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Five (100)" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Six (100)" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Seven (100)" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Eight (100)" />

            <Button
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="#00B0FF"
                android:textColor="#FFFFFF"
                android:text="Button Nine (100)"
                android:layout_marginBottom="70dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>